@{
    ViewData["Title"] = "Something went wrong";
}

<div class="page-header">
    <h2 class="page-title">Oops!</h2>
    <div class="page-subtitle">Something went wrong while processing your request.</div>
</div>

<div class="panel">
    <div class="panel-b">
        <p style="opacity:.8;margin:0 0 12px 0;">
            Please try again. If the problem continues, contact support.
        </p>

        <a class="btn-primary-dark" asp-controller="Dashboard" asp-action="Index" style="text-decoration:none;">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>