@model InventoryManagementPro.Models.ViewModels.SalesVM
@using System.Text.Json

@{
    ViewData["Title"] = "Sales";
}

<div class="page-header">
    <h2 class="page-title">Sales</h2>
    <div class="page-subtitle">Overview of revenue and recent transactions</div>
</div>

<div class="kpi-row">
    <div class="kpi green">
        <div class="kpi-top">
            <div class="kpi-left">
                <div class="kpi-icon-lg"><i class="bi bi-graph-up-arrow"></i></div>
                <div class="kpi-text">
                    <div class="kpi-value">$@Model.TotalSales</div>
                    <div class="kpi-sub">Total Sales</div>
                </div>
            </div>
        </div>
    </div>

    <div class="kpi blue">
        <div class="kpi-top">
            <div class="kpi-left">
                <div class="kpi-icon-lg"><i class="bi bi-calendar2-week"></i></div>
                <div class="kpi-text">
                    <div class="kpi-value">$@Model.ThisMonthSales</div>
                    <div class="kpi-sub">This Month</div>
                </div>
            </div>
        </div>
    </div>

    <div class="kpi orange">
        <div class="kpi-top">
            <div class="kpi-left">
                <div class="kpi-icon-lg"><i class="bi bi-receipt"></i></div>
                <div class="kpi-text">
                    <div class="kpi-value">@Model.TotalOrders</div>
                    <div class="kpi-sub">Total Orders</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-h">
        <div>Revenue Trend</div>
        <div class="panel-actions">
            <span class="dot"></span><span class="dot"></span><span class="dot"></span>
        </div>
    </div>
    <div class="panel-b">
        <div style="height:240px;">
            <canvas id="salesChart"></canvas>
        </div>
    </div>
</div>

<div class="table-wrap">
    <div class="table-head table-toolbar">
        <div class="table-title">Recent Sales</div>

        <div class="table-tools">
            <form method="get" asp-action="Index" class="tool-search">
                <i class="bi bi-search"></i>
                <input name="q" value="@Model.Query" placeholder="Search sales..." />
            </form>

            <a class="btn-ghost"
               asp-action="ExportCsv"
               asp-route-q="@Model.Query">
                Export <i class="bi bi-download"></i>
            </a>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width:170px;">Sale ID</th>
                <th style="width:140px;">Date</th>
                <th>Customer</th>
                <th style="width:140px;">Amount</th>
                <th style="width:140px;">Status</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.RecentOrders != null && Model.RecentOrders.Any())
            {
                foreach (var o in Model.RecentOrders)
                {
                    var badgeClass = o.Status == "Completed" ? "in" : o.Status == "Pending" ? "low" : "out";

                    <tr>
                        <td>@o.OrderNo</td>
                        <td>@o.OrderDateUtc.ToLocalTime().ToString("dd MMM yyyy")</td>
                        <td>@(o.CustomerName ?? "-")</td>
                        <td>$@o.TotalAmount</td>
                        <td><span class="badge @badgeClass">@o.Status</span></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" style="text-align:center; opacity:.7;">No sales found</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="table-foot">
        <span>
            Showing @Model.RecentOrders.Count of @Model.TotalCount entries
        </span>

        <div class="pager">
            @{
                var prevDisabled = Model.CurrentPage <= 1 ? "disabled" : "";
                var nextDisabled = Model.CurrentPage >= Model.TotalPages ? "disabled" : "";
            }

            <a class="pg @prevDisabled"
               asp-action="Index"
               asp-route-q="@Model.Query"
               asp-route-page="@(Model.CurrentPage - 1)">
                &lt;
            </a>

            <span class="pg active">@Model.CurrentPage</span>

            <a class="pg @nextDisabled"
               asp-action="Index"
               asp-route-q="@Model.Query"
               asp-route-page="@(Model.CurrentPage + 1)">
                &gt;
            </a>
        </div>
    </div>
</div>

<script>
    const revenueLabels = @Html.Raw(JsonSerializer.Serialize(Model.RevenueLabels));
    const revenueData = @Html.Raw(JsonSerializer.Serialize(Model.RevenueData));
</script>

@section Scripts {
    <script>
        Chart.defaults.color = 'rgba(233,238,246,.70)';
        Chart.defaults.borderColor = 'rgba(255,255,255,.06)';

        const ctx = document.getElementById('salesChart');
        new Chart(ctx, {
          type: 'line',
          data: {
            labels: revenueLabels,
            datasets: [{
              label: 'Revenue',
              data: revenueData,
              borderColor: '#60a5fa',
              backgroundColor: 'rgba(96,165,250,.10)',
              tension: .35,
              fill: true,
              pointRadius: 0,
              borderWidth: 2
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: {
              x: { ticks: { color: 'rgba(233,238,246,.45)' }, grid: { color: 'rgba(255,255,255,.05)' } },
              y: { ticks: { color: 'rgba(233,238,246,.45)' }, grid: { color: 'rgba(255,255,255,.05)' } }
            }
          }
        });
    </script>
}