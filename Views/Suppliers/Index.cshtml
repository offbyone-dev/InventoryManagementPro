@model List<InventoryManagementPro.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

@if (TempData["Success"] != null)
{
    <div style="margin-bottom:12px; padding:10px; border-radius:10px; background: rgba(46, 204, 113, .12); border: 1px solid rgba(46, 204, 113, .25);">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
    </div>
}

<div class="table-wrap">
    <div class="table-head table-toolbar">
        <div class="table-title">Suppliers</div>

        <div class="table-tools">
            <a class="btn-primary-dark" asp-action="Create">
                <i class="bi bi-plus"></i> Add Supplier
            </a>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Address</th>
                <th>Status</th>
                <th style="width:90px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="6">No suppliers found.</td>
                </tr>
            }
            else
            {
                foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Name</td>
                        <td>@s.Phone</td>
                        <td>@s.Email</td>
                        <td>@s.Address</td>
                        <td>
                            <span class="badge @(s.IsActive ? "in" : "out")">
                                @(s.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn-ghost">
                                <i class="bi bi-pencil"></i>
                            </a>

                            <form asp-action="Delete" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@s.Id" />
                                <button type="submit" class="btn-ghost"
                                        onclick="return confirm('Delete this supplier?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>