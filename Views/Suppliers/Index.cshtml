@{
    ViewData["Title"] = "Suppliers";
}

<div class="page-header">
    <h2 class="page-title">Suppliers</h2>
    <div class="page-subtitle">Manage all product suppliers</div>
</div>

<div class="table-wrap">
    <div class="table-head table-toolbar">
        <div class="table-title">Suppliers List</div>

        <div class="table-tools">
            <div class="tool-search">
                <i class="bi bi-search"></i>
                <input placeholder="Search suppliers..." />
            </div>
            <button class="btn-primary-dark">
                <i class="bi bi-plus"></i> Add Supplier
            </button>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th style="width:80px;">ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Status</th>
                <th style="width:190px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>ABC Traders</td>
                <td>abc7@email.com</td>
                <td>+880123457789</td>
                <td><span class="badge in">Active</span></td>
                <td class="actions-wide">
                    <button class="btn-action edit"><i class="bi bi-pencil"></i> Edit</button>
                    <button class="btn-action del"><i class="bi bi-trash"></i> Delete</button>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>Global Supply Co.</td>
                <td>globalsupply@email.com</td>
                <td>+880987954321</td>
                <td><span class="badge low">Pending</span></td>
                <td class="actions-wide">
                    <button class="btn-action edit"><i class="bi bi-pencil"></i> Edit</button>
                    <button class="btn-action del"><i class="bi bi-trash"></i> Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="table-foot">
        <span>Showing 1 to 2 of 2 entries</span>
        <div class="pager">
            <button class="pg">&lt;</button>
            <button class="pg active">1</button>
            <button class="pg">&gt;</button>
        </div>
    </div>
</div>